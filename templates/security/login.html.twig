{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="form-page container">
        <img class="form-image" src="{{ asset('images/tree.png') }}" alt="Login">
        <div class="form-container">
            <h1>Connexion</h1>
            {% if error %}
                <div class="alert" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>

                {# Si on a un email saisi, proposer le renvoi du mail #}
                {% if last_username %}
                    <form action="{{ path('app_verify_email_resend') }}" method="post" class="resend-email">
                        <input type="hidden" name="_token" value="{{ csrf_token('resend_confirmation') }}">
                        <input type="hidden" name="email" value="{{ last_username }}">
                        <button type="submit" class="btn-primary">
                            Renvoyer l’email de confirmation
                        </button>
                    </form>
                {% endif %}
            {% endif %}

            {{ form_start(form) }}
            {{ form_row(form.username, {
                row_attr: { class : 'form-control'},
                label_attr: { class: 'form-label' }
            }) }}
            {{ form_row(form.password, {
                row_attr: { class : 'form-control'},
                label_attr: { class: 'form-label' }
            }) }}
            {{ form_row(form.submit,{
                attr: {class : 'btn-primary'}
            }) }}
            {{ form_end(form) }}
            <div class="helper-links">
                <a href="{{ path('app_register') }}">Pas encore de compte ? S’inscrire</a>
            </div>
        </div>
    </section>
{% endblock %}
